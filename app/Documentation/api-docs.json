                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "authorized": {
                                            "type": "boolean",
                                            "example": true
                                        },
                                        "message": {
                                            "type": "string",
                                            "example": "Token válido."
                                        }
                                    },
                                    "type": "object"
                                }
