        "/api/verify-code": {
            "post": {
                "tags": [
                    "Autenticação"
                ],
                "summary": "Verifica um código de verificação",
                "operationId": "9e91e0f945f49cb7fc6c7e79c4a46576",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "code"
                                ],
                                "properties": {
                                    "code": {
                                        "type": "string",
                                        "example": "ABC123"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Sucesso",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "user": {
                                            "$ref": "#/components/schemas/UserResource"
                                        },
                                        "token": {
                                            "type": "string",
                                            "example": "eyJ0eXAiOiJKV1QiLCJhbGciOiJSUzI1Ni..."
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
